               [random_gen,' ',' ',' ',random_gen],
               [random_gen,' ',' ',' ',random_gen],
               [random_gen,' ',' ',' ',random_gen]]).
      
load:-use_module(library(random)).

random_gen:-
        random(0,2,X),
        write(X).

cenas:-
        estado_inicial(Tab),
        write(Tab).


