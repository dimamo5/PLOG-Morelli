estado_inicial([[random_gen,random_gen,random_gen,random_gen,random_gen],
               [random_gen,' ',' ',' ',random_gen],
               [random_gen,' ',' ',' ',random_gen],
               [random_gen,' ',' ',' ',random_gen]]).
      
load:-use_module(library(random)).

random_gen(Val):-
        random(0,2,Val).

cenas:-
        estado_inicial(Tab),
        imprime_tab(Tab).


imprime_tab(Tab):-
        imprime_linhas(Tab).
        
 
imprime_linhas([Head|Tail]):-
        imprime_aux(Head),nl,
        imprime_linhas(Tail).       


/* imprime uma determinada lista X, N vezes */
imprime(N,X):-
        N > 1,
        N1 is N-1,
        imprime_aux(X),
        imprime(N1,X).
 
imprime(1,_). /* caso base */    

/*funçao auxiliar que imprime no ecra*/
imprime_aux([H|T]):-
        mostra(H), write(' '),
        imprime_aux(T).

imprime_aux([]). /* caso base */

mostra(H):-
        write(H).

mostra(random_gen):-
        X is random_gen(X),
        write(X).

